TCEFORM.pages {
  #TAB-Allgemein
  title.label = LLL:EXT:kuhdist/Resources/Private/Language/locallang_db.xlf:tceform.page.title.label
  # nav_title.disabled = 1
  nav_title.label = LLL:EXT:kuhdist/Resources/Private/Language/locallang_db.xlf:tceform.page.nav_title.label
  # subtitle.disabled = 1
  subtitle.label = LLL:EXT:kuhdist/Resources/Private/Language/locallang_db.xlf:tceform.page.subtitle.label
  // Remove unwanted doktypes (1:Standard, 3:Externe URL, 4:Shortcut, 6:BE-Bereich, 7:Mountpoint, 199:Abstand, 254:Sysordner, 255:Recycler, --div--:Trennlinie
  doktype.removeItems = 6,7,199,255,--div--
  #TAB-SEO
  # no_index.disabled = 1
  # no_follow.disabled = 1
  sitemap_changefreq = monthly

  #TAB-Social Media
  #TAB-Metadaten
  #TAB-Erscheinungsbild
  layout {
    disabled = 1
    label = LLL:EXT:kuhdist/Resources/Private/Language/locallang_db.xlf:tceform.page.layout.label
    disableNoMatchingValueElement = 1
    # layout field TYPO3 Standard labels removed in TCA/Overrides/pages.php
    # => use addItems only
    addItems {
      0 = LLL:EXT:kuhdist/Resources/Private/Language/locallang_db.xlf:tceform.page.layout.0
    }
  }

  backend_layout {
    disabled = 1
    disableNoMatchingValueElement = 1
  }

  backend_layout_next_level {
    disabled = 1
    disableNoMatchingValueElement = 1
  }

  newUntil.disabled = 1
  #TAB-Verhalten
  php_tree_stop.disabled = 1
  content_from_pid.disabled = 1
  target.disabled = 1
  cache_timeout.disabled = 1
  cache_tags.disabled = 1

  #TAB-Ressourcen
  media.label = LLL:EXT:kuhdist/Resources/Private/Language/locallang_db.xlf:tceform.page.media.label
  #TAB-Sprache
  #TAB-Zugriff
  #TAB-Kategorien
  #TAB-Hinweis
}

[! backend.user.isAdmin]
  # Definition der Seitenattribute für Redaktoren
  TCEFORM.pages {
    #TAB-Allgemein
    #TAB-SEO
    #TAB-Social Media
    #TAB-Metadaten
    #TAB-Erscheinungsbild
    #TAB-Verhalten
    is_siteroot.disabled = 1
    no_search.disabled = 1
    module.disabled = 1
    #TAB-Ressourcen
    tsconfig_includes.disabled = 1
    TSconfig.disabled = 1
    #TAB-Sprache
    l18n_cfg.disabled = 1
    #TAB-Zugriff
    fe_group.disabled = 1
    #TAB-Kategorien
    #TAB-Hinweis
  }
[END]


